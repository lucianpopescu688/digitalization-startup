<!-- Interest Form Modal -->
<div id="interestModal" class="modal" style="display: none;">
    <div class="modal-content">
        <h3>Express Your Interest</h3>
        <p>Be among the first to get The Box when it launches!</p>
        
        <form id="interestForm" class="interest-form">
            <div class="form-group">
                <label for="interest-email">Email Address</label>
                <input 
                    type="email" 
                    id="interest-email" 
                    name="email" 
                    value="<%= user ? user.email : '' %>"
                    required
                >
            </div>
            
            <div class="form-group">
                <label for="company-size">Company/Organization Size</label>
                <select id="company-size" name="company_size">
                    <option value="">Select size</option>
                    <option value="individual">Individual/Family</option>
                    <option value="small">Small Business (1-10 employees)</option>
                    <option value="medium">Medium Business (11-50 employees)</option>
                    <option value="large">Large Business (50+ employees)</option>
                    <option value="enterprise">Enterprise (500+ employees)</option>
                </select>
            </div>
            
            <div class="form-group">
                <label for="use-case">Primary Use Case</label>
                <select id="use-case" name="use_case">
                    <option value="">Select use case</option>
                    <option value="personal">Personal/Family Archives</option>
                    <option value="business">Business Content</option>
                    <option value="service">Digitalization Service</option>
                    <option value="education">Educational Institution</option>
                    <option value="other">Other</option>
                </select>
            </div>
            
            <div class="form-group">
                <label class="checkbox-label">
                    <input type="checkbox" name="beta_testing" value="1">
                    <span class="checkmark"></span>
                    I'm interested in beta testing The Box
                </label>
            </div>
            
            <div class="modal-actions">
                <button type="submit" class="btn btn-primary">Submit Interest</button>
                <button type="button" onclick="closeInterestModal()" class="btn btn-secondary">Cancel</button>
            </div>
        </form>
    </div>
</div>

<script>
function showInterestForm() {
    document.getElementById('interestModal').style.display = 'flex';
}

function closeInterestModal() {
    document.getElementById('interestModal').style.display = 'none';
}

document.getElementById('interestForm').addEventListener('submit', function(e) {
    e.preventDefault();
    
    // In a real application, this would submit to a backend endpoint
    alert('Thank you for your interest! We\'ll contact you as soon as The Box is available.');
    closeInterestModal();
});

// Close modal when clicking outside
document.getElementById('interestModal').addEventListener('click', function(e) {
    if (e.target === this) {
        closeInterestModal();
    }
});
</script>

